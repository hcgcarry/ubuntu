startup_message off
# Set hardstatus always on
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %M %d %0c:%s "
# Set default encoding using utf8
defutf8 on
altscreen on
# Dynamic title
shelltitle '$ |bash'
# Disable vbell
vbell off
bindkey "^[s" split
bindkey "^[n" focus
bindkey "^[q" only
#進入copy mode
bindkey "^[o" copy
#p剪貼到默認register
# Keboard binding
# bind F11 to move to previous window
bindkey -k k2 prev
# bind F12 to move to next window
bindkey -k k3 next 
#這個變數處理式反過來玩的
bindkey "^[p" paste .
# bind Alt`~= to screen0~12
bindkey "^[0" select 0
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
bindkey "^[4" select 4
bindkey "^[5" select 5
bindkey "^[6" select 6
bindkey "^[7" select 7
bindkey "^[8" select 8
bindkey "^[9" select 9
bindkey "^[-" select 11
bindkey "^[=" select 12
# bind F9 to create a new screen
bindkey -k k4 screen
# bind F10 to rename current screen window
bindkey -k k5 title
caption always "%{= wk} %{= KY} [%n]%t @ %H %{-} %= %{= KR} %l %{-} | %{= KG} %Y-%m-%d %{-} "
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %0c:%s "
